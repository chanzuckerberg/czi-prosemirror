{
  "name": "@modusoperandi/licit",
  "version": "0.0.2-0",
  "subversion": "1",
  "description": "Rich text editor built with React and ProseMirror",
  "main": "dist/index.js",
  "style": "dist/styles.css",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/MO-Movia/licit.git"
  },
  "scripts": {
    "build:clean": "rm -rf dist/ && rm -f modusoperandi-licit-*.*.*.tgz",
    "build:css": "cp src/ui/*.css dist/ui && cp src/ui/mathquill-editor/*.css dist/ui/mathquill-editor && cp src/client/*.css dist/client && cp src/*.css dist",
    "build:babel": "babel src --out-dir dist",
    "build:flow": "flow-copy-source -v -i '**/__tests__/**' src dist",
    "build:dist": "npm run build:clean && npm run build:babel && npm run build:flow && npm run build:css",
    "build:licit": "node utils/build_bin.js",
    "flow": "flow",
    "lint:css": "stylelint \"**/*.css\"",
    "lint:js": "eslint \"**/*.js\"",
    "start": "node scripts/webserver.js",
    "postinstall": "node fix_pm_tables_dist.js",
    "prepare": "npm run build:dist"
  },
  "devDependencies": {
    "@babel/cli": "^7.10.4",
    "@babel/core": "^7.10.4",
    "@babel/plugin-proposal-class-properties": "^7.10.4",
    "@babel/plugin-proposal-decorators": "^7.10.4",
    "@babel/plugin-proposal-do-expressions": "^7.10.4",
    "@babel/plugin-proposal-export-default-from": "^7.10.4",
    "@babel/plugin-proposal-export-namespace-from": "^7.10.4",
    "@babel/plugin-proposal-function-sent": "^7.10.4",
    "@babel/plugin-proposal-logical-assignment-operators": "^7.10.4",
    "@babel/plugin-proposal-object-rest-spread": "^7.10.4",
    "@babel/plugin-proposal-pipeline-operator": "^7.10.4",
    "@babel/plugin-proposal-throw-expressions": "^7.10.4",
    "@babel/plugin-syntax-dynamic-import": "^7.8.3",
    "@babel/plugin-syntax-import-meta": "^7.10.4",
    "@babel/plugin-transform-flow-strip-types": "^7.10.4",
    "@babel/plugin-transform-parameters": "^7.10.4",
    "@babel/plugin-transform-runtime": "^7.10.4",
    "@babel/preset-env": "^7.10.4",
    "@babel/preset-flow": "^7.10.4",
    "@babel/preset-react": "^7.10.4",
    "babel-eslint": "10.1.0",
    "babel-loader": "8.1.0",
    "babel-plugin-flow-react-proptypes": "26.0.0",
    "babel-plugin-transform-react-remove-prop-types": "0.4.24",
    "clean-webpack-plugin": "3.0.0",
    "copy-webpack-plugin": "6.0.3",
    "css-loader": "3.6.0",
    "eslint": "7.4.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-prettier": "^3.1.4",
    "eslint-plugin-react": "7.20.3",
    "flow-bin": "0.128.0",
    "flow-copy-source": "2.0.9",
    "flow-webpack-plugin": "1.2.0",
    "html-loader": "1.1.0",
    "html-webpack-inline-source-plugin": "1.0.0-beta.2",
    "html-webpack-plugin": "^4.3.0",
    "husky": "^4.2.5",
    "lint-staged": "^10.2.11",
    "prettier": "^2.0.5",
    "stylelint": "^13.6.1",
    "terser-webpack-plugin": "^3.0.6",
    "webpack": "^4.43.0",
    "webpack-dev-server": "^3.11.0",
    "write-file-webpack-plugin": "4.5.1"
  },
  "dependencies": {
    "browserkeymap": "2.0.2",
    "classnames": "2.2.6",
    "color": "3.1.2",
    "cors": "^2.8.5",
    "exports-loader": "1.1.0",	
    "express": "^4.17.1",
    "flow-typed": "^3.2.0",
    "formidable": "^1.2.2",
    "invariant": "2.2.4",
    "jquery": "^3.5.1",
    "katex": "0.11.1",
    "mv": "^2.1.1",
    "node-mathquill": "0.10.2",
    "nullthrows": "1.1.1",
    "prosemirror-collab": "1.2.2",
    "prosemirror-commands": "1.1.4",
    "prosemirror-dev-tools": "3.0.2",
    "prosemirror-dropcursor": "1.3.2",
    "prosemirror-gapcursor": "1.1.5",
    "prosemirror-history": "1.1.3",
    "prosemirror-inputrules": "1.1.2",
    "prosemirror-keymap": "^1.1.4",
    "prosemirror-model": "1.10.0",
    "prosemirror-state": "1.3.3",
    "prosemirror-tables": "github:ProseMirror/prosemirror-tables",
    "prosemirror-transform": "1.2.6",
    "prosemirror-utils": "0.9.6",
    "prosemirror-view": "1.15.0",
    "query-string": "6.13.1",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "resize-observer-polyfill": "1.5.1",
    "smooth-scroll-into-view-if-needed": "1.1.28",
    "stable": "0.1.8",
    "style-loader": "^1.2.1",
    "uuid": "8.2.0",
    "webfontloader": "1.6.28"
  },
  "importSort": {
    ".js": {
      "parser": "babylon",
      "style": "module-grouping"
    }
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.css": [
      "stylelint --fix"
    ],
    "*.js": [
      "eslint --fix"
    ],
    "*.json": [
      "prettier --write"
    ],
    "*.{css,js,json}": [
      "git add"
    ]
  }
}
